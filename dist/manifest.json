{
  "manifest_version": 3,
  "name": "X Comment Cleaner",
  "description": "Clean most the zombie bot comments on X, and try the best to keep the real comments.",
  "version": "1.0.0",
  "action": {
    "default_popup": "js/index.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "https://x.com/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ]
}